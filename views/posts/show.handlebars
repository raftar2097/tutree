
<div class="col s12 m3" >
	<h3>{{post.title}}</h3>
	<div class="card"></div>
		<div class="card-content">
			<span class="card-title">{{!-- {{formatDate post.date 'MMMM Do YYYY'}} --}}</span>
			{{{post.body}}}
		</div>
	</div>
	<div class="col s12 m3">
		<div class="card center-align">
			<div class="card-content">
				<span class="card-title">
					{{post.user.firstName}}  {{post.user.lastName}}
				</span>
			</div>
			<div class="card-action">
				<form action="/posts/like/{{post.id}}" method="post">
					<input type="submit" value="HIT ME" class="btn">{{post.like}}</input>
				</form>
				<br/>
				<div class="row">
					<a href="/stories/user/{{post.user.id}}">More From {{post.user.firstName}}</a>
				</div>
			</div>
		</div>
	</div>

	{{#each post.comments}}
		<div class="card">
			<div class="card-content">
				<h5>{{commentBody}}</h5>
				
				<br>
			</div>
		</div>
	{{/each}}

	<div class="card">
		<div class="card-content">
			<span class="card-title">Answers</span>
			{{#if user}}
				<form action="/posts/comments/{{post.id}}" method="post">
					<div class="input-field">
						<textarea name="comments" class="materialize-textarea"></textarea>
						<label for="comments">Add answer</label>
					</div>
					<input type="submit" class="btn blue lighten-1"></input>
				</form>			
			{{else}}
				<p>Please <a href="/users/login">Login</a>to Leave a Comment</p>
			{{/if}}
		</div>
	</div>
</div>