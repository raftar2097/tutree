
<div class="col s12 m3" >
	<h3>{{question.title}}</h3>
	<div class="card"></div>
		<div class="card-content">
			<span class="card-title">{{!-- {{formatDate post.date 'MMMM Do YYYY'}} --}}</span>
			{{{question.body}}}
		</div>
	</div>
	<div class="col s12 m3">
		<div class="card center-align">
			<div class="card-content">
				<span class="card-title">
					{{question.user.firstName}}  {{question.user.lastName}}
				</span>
			</div>
			<div class="card-action">
				<a href="/stories/user/{{question.user.id}}">More From {{question.user.firstName}}</a>
			</div>
		</div>
	</div>

	{{#each question.answers}}
		<div class="card">
			<div class="card-content">
				<h5>{{answerBody}}</h5>
				<br>
			</div>
		</div>
	{{/each}}

	<div class="col s12 m3">
		<div class="card">
			<div class="card-content">
				<span class="card-title">Answers</span>
				{{#if user}}
					<form action="/questions/answers/{{question.id}}" method="post">
						<div class="input-field">
							<textarea name="comments" class="materialize-textarea"></textarea>
							<label for="comments">Add answers</label>
						</div>
						<input type="submit" class="btn blue lighten-1"></input>
					</form>		
				{{else}}
					<p>Please <a href="/users/login">Login</a>to Leave a Comment</p>
				{{/if}}
			</div>
		</div>
	</div>
	
</div>